{
  "name": "react-headless-timeline",
  "version": "0.3.1",
  "description": "⚡️ Headless components for building custom timelines for React",
  "main": "dist/react-headless-timeline.min.js",
  "module": "dist/react-headless-timeline.esm.js",
  "browser": "dist/react-headless-timeline.umd.js",
  "types": "dist/types/index.d.ts",
  "scripts": {
    "test": "jest",
    "build": "rimraf dist && NODE_ENV=production rollup -c && npm run build:types",
    "build:types": "rimraf dist/types && tsc --project ./tsconfig.json && replace 'import type' 'import' ./dist/types -r --silent && replace 'export type' 'export' ./dist/types -r --silent",
    "dev": "rollup -c -w"
  },
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@babel/preset-react": "^7.12.10",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@testing-library/react": "^12.1.5",
    "@testing-library/react-hooks": "^8.0.0",
    "@types/jest": "^28.1.0",
    "@types/node": "^17.0.35",
    "@types/react": "^17.0.1",
    "@types/react-dom": "^17.0.1",
    "@typescript-eslint/eslint-plugin": "^5.25.0",
    "@typescript-eslint/parser": "^5.25.0",
    "eslint": "^8.16.0",
    "jest": "^28.1.0",
    "jest-environment-jsdom": "^28.1.0",
    "prettier": "^2.6.2",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "replace": "^1.2.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.75.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-license": "^2.7.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript": "^1.0.1",
    "ts-jest": "^28.0.3",
    "ts-node": "^10.8.0",
    "typescript": "^4.6.4",
    "utility-types": "^3.10.0"
  },
  "peerDependencies": {
    "react": "^16.8.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/deivuss331/react-headless-timeline.git"
  },
  "keywords": [
    "react",
    "timeline",
    "timelines"
  ],
  "author": "Dawid Zajac <zajdawid@protonmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/deivuss331/react-headless-timeline/issues"
  },
  "homepage": "https://github.com/deivuss331/react-headless-timeline#readme",
  "dependencies": {
    "date-fns": "^2.28.0"
  }
}
